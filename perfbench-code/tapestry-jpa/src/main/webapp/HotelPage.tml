<html t:type="template" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
<body>      

  <div class="section">
    <h1>View Hotel</h1>
  </div>
  <div class="section">
    <div class="entry">
      <div class="label">Name:</div>
      <div class="output">${hotel.name}</div>
    </div>
    <div class="entry">
      <div class="label">Address:</div>
      <div class="output">${hotel.address}</div>
    </div>
    <div class="entry">
      <div class="label">City:</div>
      <div class="output">${hotel.city}</div>
    </div>
    <div class="entry">
      <div class="label">State:</div>
      <div class="output">${hotel.state}</div>
    </div>
    <div class="entry">
      <div class="label">Zip:</div>
      <div class="output">${hotel.zip}</div>
    </div>
    <div class="entry">
      <div class="label">Country:</div>
      <div class="output">${hotel.country}</div>
    </div>
    <div class="entry">
      <div class="label">Nightly rate:</div>
      <div class="output"><t:output value="hotel.price" format="currencyFormat"/></div>
    </div>
  </div>
  <div class="section">
    <t:form t:id="form" context="hotel.id">
      <fieldset class="buttonBox">
        <input type="submit" value="Book Hotel"/>&#160;
        <t:submit t:id="back" value="Back to Search"/>
      </fieldset>
    </t:form>
  </div>
   
</body>
</html>